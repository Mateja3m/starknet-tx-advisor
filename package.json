{
  "name": "starknet-tx-advisor",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "app",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace app run dev",
    "dev:collector": "npm run build -w packages/core && npm --workspace services/collector run dev",
    "dev": "concurrently \"npm run dev:collector\" \"npm run dev:web\"",
    "build": "npm run build -w packages/core && npm run build -w packages/sdk && npm run build -w services/collector && npm run build -w app",
    "test": "npm --workspace packages/core run test",
    "test:rpc": "node scripts/test-rpc.mjs"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.5",
    "concurrently": "^8.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}
